<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cohen.trackfrombehind.PolyActivity">

    <LinearLayout
        android:id="@+id/id_map_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/id_map_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="50dp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed (kmh)"
                android:textSize="16dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/id_map_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="50dp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance (km)"
                android:textSize="16dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_map_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="50dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="calories"
                android:textSize="16dp">

            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_poly_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/id_map_LL">
        <TextView
            android:id="@+id/id_poly_sec"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text=":"/>


        <TextView
            android:id="@+id/id_poly_min"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp">

        </TextView>

    </LinearLayout>




<fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/id_poly_timer"/>



    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/start"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@id/map"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:text="start"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/stop"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@id/map"
        android:layout_marginBottom="75dp"
        android:layout_centerHorizontal="true"
        android:text=" stop"/>

</RelativeLayout>